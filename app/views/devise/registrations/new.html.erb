<%= turbo_frame_tag "modal" do %>
  <div class="modal-backdrop" onclick="this.closest('turbo-frame').src = null; this.closest('turbo-frame').innerHTML = ''">
    
    <div class="modal-content" onclick="event.stopPropagation()">
      
      <div class="auth-container">
        <button type="button" class="close-modal-btn" onclick="document.getElementById('modal').removeAttribute('src'); document.getElementById('modal').innerHTML = ''">
          &times;
        </button>

        <h2>Join Pillarboxd</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), 
            html: { class: "auth-form", data: { turbo_frame: "_top" } }) do |f| %>
          
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "auth-input" %>
          </div>

          <div class="field">
            <%= f.label :username %>
            <%= f.text_field :username, autocomplete: "username", class: "auth-input" %>
          </div>

          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
              <em class="sub-label">(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: "auth-input" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "auth-input" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign Up", class: "auth-btn" %>
          </div>
        <% end %>

        <div class="auth-links">
          <%= render "devise/shared/links" %>
        </div>
      </div>

    </div>
  </div>
<% end %>
